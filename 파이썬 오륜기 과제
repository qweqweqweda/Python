import turtle as t

t.shape("turtle")
t.speed(0)
t.pensize(20)

t.circle(100)

t.up()
t.forward(240)
t.down()
t.pencolor("red")
t.circle(100)

t.penup()
t.backward(480)
t.down()
t.pencolor("blue")
t.circle(100)


t.up()
t.forward(20)
t.right(90)
t.pendown()
t.pencolor("yellow")
t.circle(100)

t.up()
t.left(90)
t.forward(340)
t.right(90)
t.forward(100)
t.left(90)
t.down()
t.pencolor("green")
t.circle(100)

t.done()
