import turtle as t

t.shape('turtle')

#윈도우 크기
t.screensize(100,500)

#캔버스 크기
t.setup(width=900, height=700 )

#줄 안보임
t.penup()

#펜 사이즈크기
t.pensize(10)

#펜 색깔
t.color("red")

#배경색
t.bgcolor("yellow")

#영역 색칠
t.fillcolor("blue")

#첫 위치 이동
t.goto(-30,20)

#줄 보임
t.pendown()

t.begin_fill()
for i in range(4):
    t.forward(200);
    t.right(90);

t.end_fill()
t.done()
